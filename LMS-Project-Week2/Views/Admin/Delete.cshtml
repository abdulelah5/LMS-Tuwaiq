@model LaibrarySystem.Dto.Book

@{
    ViewBag.Title = "Delete";
}
<link rel="stylesheet" type="text/css" href="~/Content/TableCSS.css">
<h2 style="color:white;">Delete</h2>

<div class="mask d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card mask-custom w-50 p-3 h-100">
                    <div class="card-body">
                        <h3>Are you sure you want to delete this book?</h3>
                        <div>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Title)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Title)
                                </dd>

                                <dt>
                                    Author Id
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.AuthorId)
                                </dd>

                                <dt>
                                    Author name
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.author.Name)
                                </dd>

                                <dt>
                                    Is available
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.IsAvailable)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    @*<a href="@Url.Action("Index","Admin")" class="btn btn-light mt-2 ml-3">Back to List</a>*@
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="@Url.Action("Index","Admin")" class="btn btn-light mt-2 ml-3">Back to List</a>