@{
    ViewBag.Title = "Rent";
}
<link rel="stylesheet" type="text/css" href="~/Content/TableCSS.css">
<h2 style="color:white;">Rent</h2>

<br />
@if (@ViewBag.errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.errorMessage
    </div>
}
else
{


    if (@ViewBag.okMessage != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.okMessage
        </div>
    }
    else if (ViewBag.No != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.No
        </div>
    }
    else
    {
        <div class="mask d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card mask-custom w-50 p-3 h-100">
                            <div class="card-body">
                                <form asp-controller="Guest" asp-action="Rent" method="post" autocomplete="off">
                                    @*<div class="form-group">
                                            <label for="nameFormControlInput">Enter Your Name:</label>
                                            <input type="text" name="name" class="form-control" id="nameFormControlInput">
                                        </div>*@
                                    <div class="form-group">
                                        <label>Book Name:</label>
                                        <input type="text" name="name" class="form-control " id="nameFormControlInput" value="@ViewBag.book.Title" disabled>
                                    </div>

                                    <input type="hidden" name="id" class="form-control myInput text-white" value="@ViewBag.book.Id" hidden>


                                    <button type="submit" class="btn btn-outline-warning myInput text-white">Rent</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


}

<div>
    @*@Html.ActionLink("Back to List", "Index")*@
    <a href="@Url.Action("Index","Guest")" class="btn btn-light mt-2 ml-3">Back to List</a>
</div>